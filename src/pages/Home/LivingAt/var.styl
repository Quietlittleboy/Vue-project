.livingAt
  overflow hidden
  .home-recommend //轮播图
    margin-top 10px
    height 200px
    background #000
    .swiper-container
      width 100%
      height 100%
      .swiper-wrapper
        width 100%
        height 100%
        .swiper-slide
          display flex
          justify-content center
          align-items flex-start
          flex-wrap wrap
          img
            width 100%
            height 100%
      .swiper-pagination
        >span.swiper-pagination-bullet-active
          background #02a774
  .product-list
    width 100%
    margin-top 10px
    background-color #fff
    padding 10px
    font-size 16px
    .list-title
      text-align center
      .title
        font-size 18px
      .text
        font-size 14px
        margin 10px 0
        color #999
    .conter
      display flex
      flex-wrap wrap
      .list-content
        width 172px
        margin 0 10px 20px 0
        .content
          background-color #F1ECE2
          height 200px
          img
            width 100%
            height 172px
            background-color #f4f4f4
          .essential
            font-size 14px
            line-height -10px
            padding 5px 
            overflow hidden;
            text-overflow ellipsis;
            white-space nowrap;
        .name
          margin 8px 0
          font-size 14px
        .price
          margin-bottom 8px
          color red
        span
          font-size 12px
          border 1px solid red
          border-radius 30px
          padding 0px 5px
          margin-right 5px